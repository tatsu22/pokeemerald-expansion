script OldaleTown_ChestnuthillDiner_EventScript_FirstDate {
    lockall
    msgbox("TYLER: Hey, Tara!")
    applymovement(3, OldaleTown_ChestnuthillDiner_EventScript_FirstDate_WalkToPlayer)
    waitmovement(0)
    msgbox("TYLER: I, uh, got us a table.")
    applymovement(3, OldaleTown_ChestnuthillDiner_EventScript_FirstDate_WalkBackToTable)
    applymovement(OBJ_EVENT_ID_PLAYER, OldaleTown_ChestnuthillDiner_EventScript_FirstDate_PlayerWalkToTable)
    // TODO: Write better
    msgbox("TYLER: So... uh... do you like your new Pokemon?")
    msgbox("...")
    msgbox("That's great! What else do you like to do?")
    msgbox("...")
    msgbox("That sounds fun! What do you like about it?")
    msgbox("...")
    fadescreen FADE_TO_BLACK
    releaseall
}

movement OldaleTown_ChestnuthillDiner_EventScript_FirstDate_WalkToPlayer {
    walk_down
    walk_right * 7
    face_down
}

movement OldaleTown_ChestnuthillDiner_EventScript_FirstDate_WalkBackToTable {
    walk_left * 7
    walk_up
    face_right
}

movement OldaleTown_ChestnuthillDiner_EventScript_FirstDate_PlayerWalkToTable {
    walk_up
    walk_left * 4
    walk_up
    face_left
}
